{
  "name": "ecomm-platform",
  "version": "1.0.0",
  "description": "E-Commerce Platform with QA & Test Automation Framework",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "seed": "node db/seed.js",
    "test": "jest --verbose --forceExit --detectOpenHandles",
    "test:api": "jest tests/api --verbose --forceExit --detectOpenHandles",
    "test:ui": "npx playwright test",
    "test:all": "npm run test:api && npm run test:ui"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  }
}
